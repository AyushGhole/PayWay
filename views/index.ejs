<% layout("/layouts/boilerplate.ejs") %>
  <!-- Sliderss -->

  <div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
      <!-- Down Icons -->
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>

      <!-- Down Icons 2  -->
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
        aria-label="Slide 2"></button>
    </div>
    <div class="carousel-inner">
      <!-- Slider 1st -->
      <div class="carousel-item active">
        <img src="slide.avif" alt="..." />
        <div class="carousel-caption d-none d-md-block">
          <h1>Secure Payment && Smooth Banking</h1>
          <h4>
            More ways to pay and more places to shop.Send money quickly and easily
            around the globe.
          </h4>

          <% if( !currUser){ %>
            <!-- Login -->
            <a href="/main/login" style="text-decoration: none; color: white;">
              <button type="button" class="btn btn-outline-light"> Login
              </button></a>

            <!-- Get started -->
            <a href="/main/signup" style="text-decoration: none; color: white;">
              <button type="button" class="btn btn-primary ms-2">Get Started</button>
            </a>
            <% } %>

              <% if( currUser) { %>
                <a href="/main/<%= currUser._id %>/dashboard" style="text-decoration: none; color: white;">
                  <button type="button" class="btn btn-primary ms-2">Let's Begin</button>
                </a>

                <% } %>


        </div>
      </div>

      <!-- Sliders 2 -->
      <div class="carousel-item">
        <img src="slide2.avif" alt="..." />
        <div class="carousel-caption d-none d-md-inline">
          <h1>Sell just about anywhere in the world</h1>
          <h4>
            Whether you have an online shop or need to accept payments remotely,
            we can help you get paid fast.
          </h4>
          <!-- Login -->
          <a href="/main/login" style="text-decoration: none; color: white;">
            <button type="button" class="btn btn-outline-light"> Login
            </button></a>

          <!-- Get started -->
          <a href="/main/signup" style="text-decoration: none; color: white;">
            <button type="button" class="btn btn-primary ms-2">Get Started</button>
          </a>
        </div>
      </div>
    </div>

    <!-- Left Arrow Button Declaration -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>

    <!-- Right Arrow Button Declaration -->
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Second Content Div declaration -->
