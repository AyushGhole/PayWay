<% layout("/layouts/sidebar1.ejs") %>

  <div class="thank-you-container">

    <div class="headin">
      <div class="image"></div>

      &nbsp; <h3 style="margin-top: 0.61rem;color: blue; ">Send Money</h3>

    </div>


    <hr color="blude" />
    <!--To Account Number Declaration -->
    <form method="POST" action="/main/<%= currUser.id %>/payMoney">
      <div class="row mb-1">
        <label for="Account Number " class="col-sm-2 col-form-label col-form-label-sm">Account Number </label>
        <div class="col-sm-10">
          <input type="number" name="To" class="form-control form-control-sm" id="Account Number "
            placeholder="Account Number " required />
        </div>
      </div>

      <!--Account Holder Declaration -->
      <div class="row mb-1">
        <label for="AccountHolderName" class="col-sm-2 col-form-label col-form-label-sm">Holder Name </label>
        <div class="col-sm-10">
          <input type="text" name="AccountHolderName" class="form-control form-control-sm" id="AccountHolderName"
            placeholder="AccountHolderName" required />
        </div>
      </div>


      <!-- Amount Field Declaration-->
      <div class="row mb-3">
        <label for="Amount" class="col-sm-2 col-form-label col-form-label-sm">Amount </label>
        <div class="col-sm-10">
          <input type="number" name="Amount" class="form-control form-control-sm" id="Amount" placeholder="Amount"
            required />
        </div>
      </div>

      <br />
      <!-- Money Submission -->

      <button style="border-radius:5px">Send Money</button>
    </form>
    </span>
  </div>

