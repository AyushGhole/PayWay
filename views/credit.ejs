<% layout("/layouts/boilerplate.ejs") %>

  <!-- Top Desktop Bakcground Image  -->
  <div class="imageCard" style="color:rgb(246, 252, 252); text-align: left; padding: 1rem;">
    <!-- Text Display Declaration -->
    <div>
      <h1 style="margin: 1.3rem;">Shop The World With Pay Way</h1>
      <h5 style="margin-left: 1.8rem;">To shop from millions of online stores around world ,</h5>
      <h5 style="margin-left: 1.8rem;">activate your card for International Transactions.</h5>

      <form action="/main/login">
        <button class="btn btn-outline-light" style="margin: 1.5rem;">Get Started</button>
      </form>

      <p style="margin-left: 1.3rem;">Link your International Card now ???</p>
    </div>


    <!-- Video declaration -->
    <div class="video">
      <iframe width="500" height="300" src="https://www.youtube.com/embed/1oDhFnkiRRo?si=AiZKBqymnE8RC7Qg"
        title="YouTube video player" frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
  </div>
  </div>

  <!-- Features headings -->
  <h2 style="margin: 2rem; text-align: center;">Features</h2>

  <!-- Credits Type Declaration -->
  <!-- 1st Credit Card Features  -->
  <div class="cardIMG">
    <div class="card mb-3 mt-3" style="max-width: 1000px; ">
      <div class="row g-0 cardimg">
        <div class="col-md-4 ">
          <img
            src="https://plus.unsplash.com/premium_photo-1681533650863-6a3cd8a77977?q=80&w=1429&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="" />
        </div>
        <div class="col-md-8">
          <div class="card-body" style="padding: 1.5rem;">
            <h5 class="card-title" style="font-weight: 700;">Premium Credit Cards</h5>
            <p class="card-text" style="font-weight: 100; font-size: 1.5rem;">
              <small>
                Contacless Premium Credit Cards just Tap and pay with safety and privacy.
              </small>
            </p>

            <!-- User not logged in -->
            <% if( !currUser){ %>
              <form action="/main/details/checked">
                <button class="btn btn-outline-warning">Apply &nbsp; &nbsp; <i
                    class="fa-solid fa-hand-point-right"></i></button>
              </form>
              <% } %>
                <!-- User Logged in -->
                <% if( currUser){ %>
                  <form action="/main/<%= currUser._id %>/details">
                    <button class="btn btn-outline-warning">Apply &nbsp; &nbsp; <i
                        class="fa-solid fa-hand-point-right"></i></button>
                  </form>
                  <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <hr />
